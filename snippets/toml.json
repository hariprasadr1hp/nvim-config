{
  "jpytest": {
    "prefix": "jpytest",
    "body": [
      "[tool.pytest.ini_options]",
      "minversion = \"6.0\"",
      "addopts = \"-q\"",
      "testpaths = [",
      "\t\"tests\",",
      "]"
    ],
    "description": "hp snippet for pytest"
  },
  "jmypy": {
    "prefix": "jmypy",
    "body": [
      "[tool.mypy]",
      "mypy_path = \"src\"",
      "check_untyped_defs = true",
      "disallow_any_generics = true",
      "no_implicit_optional = true",
      "show_error_codes = true",
      "strict_equality = true",
      "warn_redundant_casts = true",
      "warn_return_any = true",
      "warn_unreachable = true",
      "warn_unused_configs = true",
      "no_implicit_reexport = true"
    ],
    "description": "hp snippet for mypy"
  },
  "jflake8": {
    "prefix": "jflake8",
    "body": [
      "[tool.flakehell]",
      "exclude = [\"README.rst\", \"README.md\"]",
      "format = \"colored\"",
      "max_line_length = 88",
      "show_source = true",
      "whitelist = \"../../allowlist.txt\"",
      "",
      "[tool.flakehell.plugins]",
      "flake8-bandit = [\"+*\", \"-S322\"]",
      "flake8-bugbear = [\"+*\"]",
      "flake8-builtins = [\"+*\"]",
      "flake8-comprehensions = [\"+*\"]",
      "flake8-darglint = [\"+*\"]",
      "flake8-docstrings = [\"+*\"]",
      "flake8-eradicate = [\"+*\"]",
      "flake8-isort = [\"+*\"]",
      "flake8-mutable = [\"+*\"]",
      "flake8-pytest-style = [\"+*\"]",
      "flake8-spellcheck = [\"+*\"]",
      "mccabe = [\"+*\"]",
      "pep8-naming = [\"+*\"]",
      "pycodestyle = [\"+*\"]",
      "pyflakes = [\"+*\"]",
      "pylint = [\"+*\"]"
    ],
    "description": "hp snippet for flake8"
  },
  "jpylint": {
    "prefix": "jpylint",
    "body": [
      "[tool.pylint]",
      "disable = [",
      "\t\"C0114\", # missing-module-docstring",
      "\t\"C0115\", # missing-class-docstring",
      "\t\"C0116\", # missing-function-docstring",
      "\t\"C0301\", # line-too-long",
      "\t\"R0903\", # too-few-public-variables (< 2)",
      "\t\"R0911\", # too-many-return-statements (> 5)",
      "\t\"R0913\", # too-many-arguments (> 5)",
      "\t\"R0914\", # too-many-local-variables (> 15)",
      "]"
    ],
    "description": "snippet for pylint config"
  },
  "jbuildpython": {
    "prefix": "jbuildpython",
    "body": [
      "[build-system]",
      "requires = [\"setuptools>=42.0\", \"wheel\"]",
      "build-backend = \"setuptools.build_meta\""
    ],
    "description": "hp snippet for build-system python"
  },
  "jmaturinpy": {
    "prefix": "jmaturinpy",
    "body": [
      "[build-system]",
      "requires = [\"maturin>=1.0,<2.0\"]",
      "build-backend = \"maturin\""
    ],
    "description": "snippet for maturin config (python)"
  },
  "jmaturinrust": {
    "prefix": "jmaturinrust",
    "body": [
      "[lib]",
      "# \"cdylib\" is necessary to produce a shared library for Python to import from.",
      "crate-type = [\"cdylib\"]",
      "",
      "[dependencies.pyo3]",
      "version = \"0.21.1\"",
      "# \"abi3-py38\" tells pyo3 (and maturin) to build using the stable ABI with minimum Python version 3.8",
      "features = [\"abi3-py38\"]"
    ],
    "description": "snippet for pyo3 config (rust)"
  }
}
